<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="381dp"
        android:layout_height="534dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="177dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/AÃ±adir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="Anadir"
            android:text="@string/a_adir_contacto" />

        <Button
            android:id="@+id/Modificar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/modificar_contacto" />

        <Button
            android:id="@+id/Elminar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/eliminar_contacto" />

        <Button
            android:id="@+id/Consultar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/consultar_contacto" />
    </LinearLayout>

    <TextView
        android:id="@+id/Saludo"
        android:layout_width="186dp"
        android:layout_height="51dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="48dp"
        android:text="@string/bienvenido"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Intruccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="22dp"
        android:text="@string/elija_lo_que_desea_hacer_por_favor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Saludo" />

</androidx.constraintlayout.widget.ConstraintLayout>